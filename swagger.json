{
  "swagger" : "2.0",
  "info" : {
    "description" : "This is an API to allow a client to search a remote index with Terrier",
    "version" : "1.0.0",
    "title" : "Terrier Remote API",
    "contact" : {
      "email" : "bjonynas@gmail.com"
    },
    "license" : {
      "name" : "Apache 2.0",
      "url" : "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "paths" : {
    "/index" : {
      "get" : {
        "summary" : "gets all available indexes",
        "operationId" : "getIndexes",
        "description" : "Get all available indexes\n",
        "produces" : [ "application/json" ],
        "parameters" : [ ],
        "responses" : {
          "200" : {
            "description" : "list of available indexes",
            "schema" : {
              "type" : "array",
              "items" : {
                "$ref" : "#/definitions/Index"
              }
            }
          }
        }
      }
    },
    "/retrieve" : {
      "get" : {
        "summary" : "run a query against a specified index",
        "operationId" : "retrieve",
        "description" : "Runs a query agianst a specified index\n",
        "consumes" : [ "application/json" ],
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "in" : "body",
          "name" : "searchRequest",
          "description" : "searchRequest containing the query and its parameters",
          "required" : true,
          "schema" : {
            "$ref" : "#/definitions/SearchRequest"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "query results",
            "schema" : {
              "type" : "array",
              "items" : {
                "$ref" : "#/definitions/QueryResult"
              }
            }
          }
        }
      }
    }
  },
  "definitions" : {
    "Index" : {
      "type" : "object",
      "required" : [ "path", "props" ],
      "properties" : {
        "path" : {
          "type" : "string",
          "example" : "C:/path/to/index"
        },
        "props" : {
          "type" : "array",
          "items" : {
            "type" : "object",
            "properties" : {
              "propName" : {
                "type" : "string"
              },
              "propValue" : {
                "type" : "string"
              }
            }
          },
          "example" : [ {
            "propName" : "docType",
            "propValue" : "trec"
          } ]
        }
      }
    },
    "SearchRequest" : {
      "type" : "object",
      "required" : [ "controls", "query" ],
      "properties" : {
        "queryId" : {
          "type" : "string",
          "example" : "1"
        },
        "controls" : {
          "type" : "array",
          "items" : {
            "type" : "object",
            "properties" : {
              "control" : {
                "type" : "string"
              },
              "controlValue" : {
                "type" : "string"
              }
            }
          },
          "example" : [ {
            "control" : "querying.postfilters.controls",
            "controlValue" : "decorate:org.terrier.querying.SimpleDecorate"
          } ]
        },
        "query" : {
          "type" : "string",
          "example" : "NUMBER REPRESENTATION IN BINARY MACHINES"
        }
      }
    },
    "QueryResult" : {
      "type" : "object",
      "required" : [ "docIds", "scores", "resultSize", "occurences" ],
      "properties" : {
        "docIds" : {
          "type" : "array",
          "items" : {
            "type" : "integer"
          }
        },
        "scores" : {
          "type" : "array",
          "items" : {
            "type" : "integer"
          }
        },
        "resultSize" : {
          "type" : "integer"
        },
        "occurences" : {
          "type" : "array",
          "items" : {
            "type" : "integer"
          }
        }
      }
    }
  },
  "host" : "virtserver.swaggerhub.com",
  "basePath" : "/bjonynas/terrier-remote-api/1.0.0",
  "schemes" : [ "https" ]
}